{% extends 'base-admin.html.twig' %}

{% block title %}TypeFlower index{% endblock %}

{% block body %}
    <h1>TypeFlower index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_flower in type_flowers %}
            <tr>
                <td>{{ type_flower.id }}</td>
                <td>{{ type_flower.name }}</td>
                <td>
                    <a href="{{ path('type_flower_show', {'id': type_flower.id}) }}">show</a>
                    <a href="{{ path('type_flower_edit', {'id': type_flower.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_flower_new') }}">Create new</a>
{% endblock %}
