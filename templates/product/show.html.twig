{% extends 'base-admin.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ product.publishedAt ? product.publishedAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UrlImg</th>
                <td>{{ product.urlImg }}</td>
            </tr>
            <tr>
                <th>TypeFlower</th>
                <td>
                    {% if (product.typeFlower is empty) %}
                        Ninguna
                    {% else %}
                        {{ product.typeFlower.name }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info btn-block" href="{{ path('product_table') }}">back to list</a>

    <a class="btn btn-warning btn-block mb-2" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
