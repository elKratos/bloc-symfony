{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}

    {% for product in products %}

    <div class="product">
        <div class="image-product">
            {% if(product.urlImg) %}
            <img src=""
            alt="image.png" class="image"/>
            {% else %}
            <img src=""
                 alt="image.png" class="image"/>
            {% endif %}
        </div>
        <div class="sub-info">
            <div class="title-product">
                <p>{{ product.title }}</p>
            </div>
            <div class="button-product">
                <a class="btn btn-success" href="{{ path('show_details', { 'id': product.id }) }}">
                    Ver m√°s
                </a>
            </div>
        </div>
    </div>

    {% endfor %}

{% endblock %}
