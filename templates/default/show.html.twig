{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}

    <div class="details-container">

        <div class="row">
            <div class="col-5">
                {% if(product.urlImg is empty or product.urlImg == 'NULL') %}
                    <img src="/img/product/default.png"
                         alt="image.png" width="300px" height="400px"/>
                {% elseif(product.urlImg) %}
                    <img src="/img/product/{{ product.urlImg }}"
                         alt="image.png" width="300px" height="400px"/>
                {% endif %}
            </div>
            <div class="col-7">
                <div class="mt-5 mb-5">
                    <h3>{{ product.title }}</h3>
                    <p class="mr-5">{{ product.description }}</p>
                    <small>
                        <strong>
                            Categor√≠a:

                                Ninguno

                        </strong>

                        <br/>

                        {{ product.publishedAt ? product.publishedAt|date('Y-m-d') : '' }}
                    </small>
                </div>
            </div>
        </div>

{% endblock %}